generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DEV_DATABASE_URL")
}

model User {
  id       String @id
  name     String @unique
  password String
  role     String // 'super-admin','admin','operator'

  @@map("users")
}

model Product {
  id                String    @id
  barCode           String?   @unique @map("bar_code")
  name              String    @unique
  description       String?
  brand             String?
  price             Int
  costPrice         Int       @map("cost_price")
  availableQuantity Int?      @default(0) @map("available_quantity")
  minimumQuantity   Int?      @default(0) @map("minimum_quantity")
  categoryId        String?   @map("category_id")
  category          Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  icms              Int
  ncm               String
  cest              String
  cestSegment       String?
  cestDescription   String?

  @@map("products")
}

model Category {
  id          String    @id
  name        String    @unique
  description String?
  products    Product[]

  @@map("categories")
}
